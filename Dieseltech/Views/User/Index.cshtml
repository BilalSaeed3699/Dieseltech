@using Dieseltech.Models;
@model Dieseltech.Models.tblProfile
@{
    ViewBag.Title = "Index";
    List<tblProfile> list = (List<tblProfile>)ViewBag.User;
}


<div class="content">



    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Profiles</h4>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a href="@Url.Action("Create", "User")" class="btn btn-secondary ThemeColor  float-right"><i class="fa fa-plus"></i> Add New Profile</a>
        </div>
    </div>
    <div class="row doctor-grid">
        @foreach (var item in list)
        {
            var style1 = "";
            if (@item.IsActive == 0)
            {
                style1 = "background-color:darksalmon; color:white";
            }
            else
            { style1 = ""; }
            <div class="col-md-4 col-sm-4  col-lg-3">
                <div class="profile-widget" style="@style1">
                    <div class="doctor-img">
                        <a class="avatar" href="@Url.Action("UserProfiles", "Profile", new { id = @item.profile_id } )"><img alt="" src="@item.Image"></a>
                    </div>
                    <div class="dropdown profile-action">
                        <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                        <div class="dropdown-menu dropdown-menu-right">
                            <a class="dropdown-item" href="@Url.Action("Edit", "User", new { id = @item.profile_id } )"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                            <a class="dropdown-item" href="@Url.Action("ResetPassword", "User", new { id = @item.User_ID } )"><i class="fa fa-pencil m-r-5"></i> Reset Password (*@item.Profile_name)</a>
                            <a onclick="GetUserinfo(@item.User_ID,'@item.Profile_name')" class="dropdown-item" href="#" data-toggle="modal" data-target="#delete_user"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                        </div>
                    </div>
                    <h4 class="doctor-name text-ellipsis"><a href="@Url.Action("UserProfiles", "Profile", new { id = @item.profile_id } )">@item.Profile_name</a></h4>
                    <div class="doc-prof">@item.Email</div>
                    <div class="user-country">
                        <i class="fa fa-map-marker"></i> @item.Adress
                    </div>
                </div>
            </div>
        }
    </div>

   
    <div id="delete_user" class="modal fade delete-modal" role="dialog">
        <div class="modal-dialog modal-dialog-centered modal-md">
            @using (Html.BeginForm("Index", "User", FormMethod.Post))
            {@Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-body text-center">
                    <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                    <br/>
                    <h4>Are you sure want to delete User</h4>
                   
                    <input id="UserId"  name ="UserId" hidden/>
                    <h5 id="Username"> </h5>
                    <div class="m-t-20">
                        <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>
                        <button type="submit"  class="btn btn-primary">Delete</button>
                    </div>
                </div>
            </div>
            }
        </div>
    </div>
    
</div>

<script type="text/javascript">

    function GetUserinfo(Userid, Username) {
        
        document.getElementById("Username").innerHTML = Username;
        $("#UserId").val(Userid);
    }
</script>