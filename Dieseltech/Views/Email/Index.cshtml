@using Dieseltech.Models;


@{ 
    List<tblEmailSetting> EmailSettings = (List<tblEmailSetting>)ViewBag.EmailSetting;
}
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@

    <style>
        .icon-bar a {
            display: block;
            text-align: center;
            padding: 4px;
            transition: all 0.3s ease;
            color: white;
            font-size: 15px;
        }

        .facebook {
            background: #3B5998;
            color: white;
        }

        .twitter {
            background: #55ACEE;
            color: white;
        }

        .google {
            background: #dd4b39;
            color: white;
        }

        .linkedin {
            background: #007bb5;
            color: white;
        }

        .instagram {
            background: #ea4c89;
            color: white;
        }

        .youtube {
            background: #bb0000;
            color: white;
        }
    </style>
</head>



<div class="content">

    <div class="row ">
        <div class="col-lg-8 offset-lg-2 card-box" style="border-color:lightblue; border-style:groove">


            @*@using (Html.BeginForm("UpdateEmailSetting", "Email", FormMethod.Post))
        {@Html.AntiForgeryToken()*@
            @using (Html.BeginForm("UpdateEmailSetting", "Email", FormMethod.Post, new
            {
                enctype = "multipart/form-data"
            }))
            {
                @Html.AntiForgeryToken()

                <form>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Email <span class="text-danger">*</span></label>
                                <input type="email" name="Email" value="@EmailSettings[0].Email" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Password <span class="text-danger">*</span></label>
                                <input type="password" name="Password" value="@EmailSettings[0].Password" />

                            </div>
                        </div>

                    </div>
                    <div class="row">

                        <div class="col-sm-6">

                            <div class="form-group">
                                <label>Port</label>
                                <input type="number" name="Port" value="@EmailSettings[0].Port" />
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Host</label>
                                <input type="text" name="Host" value="@EmailSettings[0].Host" />
                            </div>

                        </div>
                    </div>




                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>CC Email</label>
                                <input type="text" name="CCEmail" value="@EmailSettings[0].CCEmail" />
                            </div>

                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Enable SSL</label>
                                @*<input class="form-control" id="Actives" name="IsActives" value="@EmailSettings[0].SSLEnable" checked="@EmailSettings[0].SSLEnable" type="checkbox">*@
                                <input class="form-control" style="width: 18px;height: 18px" id="Actives" name="IsActives" checked="@EmailSettings[0].SSLEnable" value="true" type="checkbox">
                            </div>
                        </div>

                    </div>

                    <div class="row">

                        <div class="col-sm-6">
                            <div class="m-t-5 text-right">
                                <button type="submit" class="btn btn-primary " style="background-color: #4c5564 !important">Submit</button>
                            </div>
                        </div>
                    </div>
                    </form>

                    }
            </div>
    </div>
</div>
