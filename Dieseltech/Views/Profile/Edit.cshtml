            color: white;
            font-size: 15px;
        }

        .facebook {
            background: #3B5998;
            color: white;
        }

        .twitter {
            background: #55ACEE;
            color: white;
        }

        .google {
            background: #dd4b39;
            color: white;
        }

        .linkedin {
            background: #007bb5;
            color: white;
        }

        .instagram {
            background: #ea4c89;
            color: white;
        }

        .youtube {
            background: #bb0000;
            color: white;
        }
