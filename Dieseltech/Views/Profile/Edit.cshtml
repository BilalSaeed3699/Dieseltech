    <div class="row ">
        <div class="col-lg-8 offset-lg-2 card-box" style="border-color:lightblue; border-style:groove">
            @using (Html.BeginForm("Edit", "Profile", FormMethod.Post, new
            {
                enctype = "multipart/form-data"
            }))
            {
                @Html.AntiForgeryToken()

                <form>

                    @Html.HiddenFor(model => model.profile_id)
                    @Html.HiddenFor(model => model.User_ID)
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label> Name <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Profile_name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Email <span class="text-danger">*</span></label>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })

                            </div>
                        </div>
                        <div class="col-sm-12">

                            <div class="form-group">
                                <label>Address</label>
                                @Html.EditorFor(model => model.Adress, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <div class="col-sm-6" hidden>

                            <div class="form-group">
                                <label>Package</label>
                                @Html.DropDownListFor(model => model.Packageid, ViewBag.Package as IEnumerable<SelectListItem>, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>
                        <div class="col-sm-6" hidden>

                            <div class="form-group">
                                <label>Access Level</label>
                                @Html.DropDownListFor(model => model.Accessid, ViewBag.access as IEnumerable<SelectListItem>, new { @class = "form-control", @required = "required" })
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Phone </label>
                                @Html.EditorFor(model => model.phoneNo, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Avatar</label>
                                <div class="profile-upload">
                                    <div class="upload-img">
                                        <img id="user_img" alt="" src="@ViewBag.image">
                                    </div>
                                    <div class="upload-input">
                                        <input type="text" class="form-control" id="Image1" name="Image1" value="@ViewBag.image" hidden />
                                        <input type="file" class="form-control" id="Image" name="Image" onchange="show(this)" value="c:/passwords.txt" />
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                    <div class="form-group">
                        <label>Short Biography</label>
                        <textarea class="form-control" id="Details" name="Details">@ViewBag.Details</textarea>
                    </div>

                    <div class="row">


                        <div class="col-md-6 form-group">
                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="background-color:#ea4c89">
                                        <div class="icon-bar">
                                            <a href="#" class="instagram"><i class="fa fa-instagram"></i></a>
                                        </div>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.instagram, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="Facebook" name="Facebook" style="background-color:#3B5998">
                                        <div class="icon-bar">
                                            <a href="#" class="facebook"><i class="fa fa-facebook"></i></a>

                                        </div>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.Facebook, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="background-color:#55ACEE">
                                        <div class="icon-bar">
                                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                                        </div>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.Twitter, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                        </div>

                        <div class="col-md-6 form-group">
                            <div class="input-group input-group-sm">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" style="background-color:#bb0000">
                                        <div class="icon-bar">
                                            <a href="#" class="youtube"><i class="fa fa-youtube"></i></a>

                                        </div>
                                    </span>
                                </div>
                                @Html.EditorFor(model => model.youtube, new { htmlAttributes = new { @class = "form-control" } })


                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">

                        </div>
                        <div class="col-sm-6">
                            <div class="m-t-5 text-right">
                                <button class="btn btn-primary " style="background-color: #4c5564 !important">Submit</button>
                            </div>
                        </div>
                    </div>

                </form>
            }
        </div>
    </div>
</div>

<script type="text/javascript">

   function show(input) {
      if (input.files && input.files[0]) {
      var filerdr = new FileReader();
          filerdr.onload = function (e) {
              alert(e.target.result);

          $('#user_img').attr('src', e.target.result);

      }
      filerdr.readAsDataURL(input.files[0]);
   }
}
</script>
