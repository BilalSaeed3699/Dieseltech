<div class="content">
    <div class="row ">
        <div class="col-lg-8 offset-lg-2">


            <div class="account-box">
                <span style="color:red;" id="fademsg">@ViewBag.error</span>
                @using (Html.BeginForm("changepasswordnew", "Account", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <form class="form-signin">
                        <div class="account-logo">
                            <a href="index-2.html"><img src="~/assets/img/Logo_2.png" alt=""></a>
                        </div>
                        <div class="form-group">
                            <label>New Password</label>
                            <input type="password" class="form-control" autofocus id="password1" name="password1" required>
                        </div>
                        <div class="form-group">
                            <label>Confirm New Password</label>
                            <input type="password" class="form-control" autofocus id="password2" name="password2" required>
                        </div>
                        <div class="form-group text-center">
                            <button class="btn btn-primary account-btn" style="background-color: @Session["Color"] !important" type="submit">Update Password</button>
                        </div>

                    </form>
                }
            </div>
        </div>
    </div>
</div>

<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("#fademsg").fadeOut(5000);
    });
</script>
