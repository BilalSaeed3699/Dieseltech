                                    <h4 class="mb-2">

                                        Welcome to Dieseltech Studio
                                    </h4>
                                    <p class="mb-4">Please sign-in to your account and start the adventure</p>

                                    <br>
                                    <div class="mb-3">


                                        <label for="email" class="form-label">User Name</label>
                                        <input type="text" required autofocus="" class="form-control" id="userLogin" name="userLogin">

                                        <div id="lblEmail" class="invalid-feedback">
                                        </div>

                                    </div>
                                    <div class="mb-3 form-password-toggle">
                                        <div class="d-flex justify-content-between">
                                            <label class="form-label" for="password">Password</label>
                                            <a class="hyperlink" href="@Url.Action("ForgetPassword", "Account")">
                                                <small>Forgot Password?</small>
                                            </a>
                                        </div>
                                        <div class="input-group input-group-merge has-validation">
                                            <input type="password" id="userPassword" name="userPassword" class="form-control" placeholder="············" aria-describedby="password">


                                        </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <button type="submit" style="width:100%;border-color:@Session["Color"] !important;background-color: @Session["Color"] !important" ; class="btn btn-primary account-btn">
                                            Sign in
                                        </button>
                                    </div>
                                    
                                    <p class="text-center">
                                        <span>Don’t have an account?</span>
                                        <a href="@Url.Action("Register", "Account")" class="hyperlink">
                                            <span>Register Now</span>
                                        </a>
                                    </p>

                                </div>

                            </div>
                        </div>
                    </div>

                    </form>}

