    @using (Html.BeginForm("Index", "Account", FormMethod.Post))
    {
@Html.AntiForgeryToken()
                <form class="form-signin">
                    <div class="authentication-wrapper authentication-cover">
                        <div class="authentication-inner row m-0">

                            <div class="d-none d-lg-flex col-lg-6 col-xl-6 align-items-center p-5" style="background-color:white">
                                <div class="w-100 d-flex justify-content-center">

                                    <br>
                                    <img src="~/assets/img/all_agents.jpg" style="width:100%">
                                </div>
                            </div>

                            <div class="d-flex col-12 col-lg-6 col-xl-6 align-items-center authentication-bg p-sm-5 p-4" style="background-color:whitesmoke">
