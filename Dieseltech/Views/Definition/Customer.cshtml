<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Customers <i onclick="RefereshList()" class="fa fa-refresh"></i></h4>
            <span style="color:red;" id="fademsg">@ViewBag.error</span>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a id="remove" href="#" data-toggle="modal" data-target="#add_Broker" class=" open-AddBookDialog btn btn-primary btn-rounded float-right" style="background-color: #4c5564 !important;"><i class="fa fa-plus"></i> Add Customers</a>


        </div>
    </div>


    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                @*<table class="table table-border table-striped custom-table  g-dataTable mb-0">*@

                    <table style="font-size:12px;width:100%" class="table table-condensed table-fit table-sm table-striped g-dataTable  mb-0" id="tblBroker">
                        <thead>
                            <tr>
                                <th class="Broker_id" hidden>id</th>
                                <th hidden>Active Flag </th>
                                <th>Assign ID </th>
                                <th>Customer Name </th>
                                <th>MC# </th>
                                <th>Contact Name </th>
                                <th>Phone Number </th>
                                <th>Dispatch Email</th>
                                <th>Accounting Email</th>
                                <th>MC Authority</th>
                                <th>W9</th>
                                <th>Surety Bond</th>

                                <th>Active </th>
                                <th class="text-right">Action</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in list)
                            {
                            <tr>
                                <td class="carrier_id" hidden>@item.Brokerid</td>
                                <td hidden class="IsActive">@item.IsActive</td>
                                <td class="AssignID">  @item.AssignID   </td>
                                <td class="BrokerName">  @item.Name </td>
                                <td class="MC">  @item.MC </td>
                                <td class="ContactName">  @item.ContactName </td>
                                <td class="PhoneNumber">  @item.Phone   </td>
                                <td class="Email">  @item.Email   </td>
                                <td class="AccountingEmail">  @item.AccountingEmail </td>

                                @if (item.IsMcAuthorityUploaded == 1)
                                {
                                    <td class="MCAuthority"><a target="_blank" style="color:#009efb !important" class="social-icon text-xs-center" href="@item.McAuthorityFilePath"> <i class='fa fa-file'></i> @item.McAuthorityFileName</a></td>
                                }
                                else if (item.IsMcAuthorityUploaded == 0)
                                {
                                    <td class="MCAuthority">No Document Upload</td>
                                }

                                @if (item.IsW9Uploaded == 1)
                                {
                                    <td class="W9"><a target="_blank" class="social-icon text-xs-center" style="color:#009efb !important" href="@item.W9FilePath"> <i class='fa fa-file'></i> @item.W9FileName</a></td>
                                }
                                else if (item.IsW9Uploaded == 0)
                                {
                                    <td class="W9">No Document Upload</td>
                                }

                                @if (item.IsAssurityUploaded == 1)
                                {
                                    <td class="AssurityBond"><a target="_blank" class="social-icon text-xs-center" style="color:#009efb !important" href="@item.AssurityFilePath"> <i class='fa fa-file'></i> @item.AssurityFileName</a></td>
                                }
                                else if (item.IsAssurityUploaded == 0)
                                {
                                    <td class="AssurityBond">No Document Upload</td>
                                }







                                @if (item.IsActive == false)
                                {
                                    <td>
                                        <div class="badge badge-danger">Non-Active</div>

                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <div class="badge badge-success">Active</div>

                                    </td>
                                }

                                <td class="text-right">
                                    <a id="remove" class="open-AddBookDialog" href="#" data-toggle="modal" data-target="#Edit_Carrier"><i class="remove fa fa-pencil m-r-5"></i> </a>
                                    <a id="remove" class="open-AddBookDialog" style="color:red;" href="#" data-toggle="modal" data-target="#Delete_Carrier"><i class="remove fa fa-trash-o m-r-5"></i> </a>

                                </td>

                            </tr>
                            }


                        </tbody>
                    </table>
</div>
        </div>
    </div>
</div>
<div id="Delete_Carrier" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog ">
        @using (Html.BeginForm("DeleteBroker", "Definition", FormMethod.Post))
        {@Html.AntiForgeryToken()
        <div class="modal-content">

            <div class="modal-body text-center">
                <input type="text" id="Brokerid" name="Brokerid" class="form-control" hidden />
                <img src="~/assets/img/sent.png" alt="" width="50" height="46">
