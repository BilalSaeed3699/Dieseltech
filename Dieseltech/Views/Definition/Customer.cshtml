<script>
    function RefereshList() {
        location.reload();
    }
    $(document).on("click", ".open-AddBookDialog", function () {

        var myModal = $('#Edit_Carrier');
        var carrier_id = $(this).closest('tr').find('.carrier_id').text().trim();
        var BrokerName = $(this).closest('tr').find('.BrokerName').text().trim();
        var MC = $(this).closest('tr').find('.MC').text().trim();
        var AssignID = $(this).closest('tr').find('.AssignID').text().trim();
        var ContactName = $(this).closest('tr').find('.ContactName').text().trim();
        var PhoneNumber = $(this).closest('tr').find('.PhoneNumber').text().trim();
        var Email = $(this).closest('tr').find('.Email').text().trim();
        var AccountingEmail = $(this).closest('tr').find('.AccountingEmail').text().trim();
        var activestatus = $(this).closest('tr').find('.IsActive').text().trim();
        var IsActive;

        //$("#Actives", myModal).attr('checked', true);


        if (activestatus == 'False') {

            $("#Actives", myModal).attr('checked', false);


        }
        if (activestatus == 'True') {

            //$("#Actives", myModal).attr('checked', true);
            $("#Actives").prop("checked", true);

        }

       



        $("#id", myModal).val(carrier_id);
        $("#Name", myModal).val(BrokerName);
        $("#MC", myModal).val(MC);
        $("#AssignID", myModal).val(AssignID);
        $("#ContactName", myModal).val(ContactName);
        $("#PhoneNumber", myModal).val(PhoneNumber);
        $("#txtEmail", myModal).val(Email);
        $("#txtAccountingEmail", myModal).val(AccountingEmail);
        $("#Active", myModal).val(IsActive);

    });
</script>
<script>

    $(document).on("click", ".open-AddBookDialog", function () {
        var myModal = $('#Delete_Carrier');
        var country_id = $(this).closest('tr').find('.carrier_id').text();
