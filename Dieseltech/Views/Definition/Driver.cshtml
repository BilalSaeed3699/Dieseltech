            var statesid = $("#StatesId", myModal).val();

            $.ajax({
                url: '/Definition/GetCities',
                type: 'POST',
                datatype: 'application/json',
                contentType: 'application/json',
                data: JSON.stringify({ stateId: +statesid }),
                success: function (result) {
                    $("#CitysId").html("");
                    $("#CitysId").append
                        ($('<option></option>').val(0).html("Select City"));
                    $.each($.parseJSON(result), function (i, city) { $("#CitysId").append($('<option></option>').val(city.Value).html(city.Text)) })
                },
                error: function () { alert("Whooaaa! Something went wrong..") },
            });
        }

        else if (type == 'Edit') {
            var myModal = $('#Edit_CarrierHelper');
            var recipient_id = $("#StateId", myModal).val();


            //var myModal = $('#Edit_Carrier');
            //var stateId = $("#CitysId", myModal).val();

            $.ajax({
                url: '/Definition/GetCities',
                type: 'POST',
                datatype: 'application/json',
                contentType: 'application/json',
                data: JSON.stringify({ stateId: +recipient_id }),
                success: function (result) {
                    $("#CityId").html("");
                    $("#CityId").append
                        ($('<option></option>').val(null).html("Select Task"));
                    $.each($.parseJSON(result), function (i, city) { $("#CityId").append($('<option></option>').val(city.Value).html(city.Text)) })
                },
                error: function () { alert("Whooaaa! Something went wrong..") },
            });
        }

    }
