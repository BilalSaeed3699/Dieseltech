
@using Dieseltech.Models;
@{
    ViewBag.Title = "Carrier";

    List<tblCarrier> list = (List<tblCarrier>)ViewBag.tblCarriers;
}
<head>


    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="stylesheet" type="text/css" href="/assets/css/style.css">

    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>

<div class="content">
    <div class="row">
        <div class="col-sm-4 col-3">
            <h4 class="page-title">Carrier</h4>
            <span style="color:red;" id="fademsg">@ViewBag.error</span>
        </div>
        <div class="col-sm-8 col-9 text-right m-b-20">
            <a id="remove" href="#" data-toggle="modal" data-target="#add_Carrier" class=" open-AddBookDialog btn btn-primary btn-rounded float-right" style="background-color: #e80000;"><i class="fa fa-plus"></i> Add Carrier</a>


        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-border table-striped custom-table datatable mb-0">
                    <thead>
                        <tr>
                            <th class="country_id" hidden>id</th>
                            <th>Carrier Name </th>
                            <th>MC# </th>
                            <th>Assign ID </th>
                            <th>Contact Name </th>
                            <th>Phone Number </th>
                            <th hidden>Active Flag </th>
                            <th>Active </th>
                            <th class="text-right">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list)
                        {
                        <tr>
                            <td class="carrier_id" hidden>@item.CarrierID</td>
                            <td class="carrierName">  @item.CarrierName   </td>
                            <td class="MC">  @item.MC_   </td>
                            <td class="AssignID">  @item.AssignID   </td>
                            <td class="ContactName">  @item.ContactName  </td>
                            <td class="PhoneNumber">  @item.Phonenumber   </td>
                            <td hidden class="IsActive">@item.IsActive</td>

                            @if (item.IsActive == false)
                            {
                                <td>
                                    <div class="badge badge-danger">Non-Active</div>

                                </td>
                            }
                            else
                            {
                                <td>
                                    <div class="badge badge-success">Active</div>

                                </td>
                            }

                        <td class="text-right">

                            <a id="remove" class="open-AddBookDialog " href="#" data-toggle="modal" data-target="#Edit_Carrier"><i class="remove fa fa-pencil m-r-5"></i> </a>
                            <a id="remove" class="open-AddBookDialog " href="#" style="color:red;"  data-toggle="modal" data-target="#Delete_Carrier"><i class="remove fa fa-trash-o m-r-5"></i></a>
                            @*<div class="dropdown dropdown-action">
            <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
            <div class="dropdown-menu dropdown-menu-right">

                <a id="remove" class="open-AddBookDialog dropdown-item" href="#" data-toggle="modal" data-target="#Edit_Carrier"><i class="remove fa fa-pencil m-r-5"></i> Edit</a>
                <a id="remove" class="open-AddBookDialog dropdown-item" href="#" data-toggle="modal" data-target="#Delete_Carrier"><i class="remove fa fa-trash-o m-r-5"></i> Delete</a>
            </div>
        </div>*@
                        </td>

                        </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div id="Delete_Carrier" class="modal fade delete-modal" role="dialog">
    <div class="modal-dialog ">
        @using (Html.BeginForm("DeleteCarrier", "Definition", FormMethod.Post))
        {@Html.AntiForgeryToken()
        <div class="modal-content">
            <div class="modal-body text-center">
                <input type="text" id="id" name="id" class="form-control" hidden />
                <img src="~/assets/img/sent.png" alt="" width="50" height="46">
                <h3>Are you sure want to delete this?</h3>
                <div class="m-t-20">
                    <a href="#" class="btn btn-white" data-dismiss="modal">Close</a>

                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>
            </div>
        </div>
    }
    </div>

</div>

