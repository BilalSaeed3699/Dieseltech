<script>

    $(document).on("click", ".open-AddBookDialog", function () {


        //alert($(this).children('td').eq(0).is(':checked'));

        var myModal = $('#Edit_CarrierHelper');



        var recipient_id = $(this).closest('tr').find('.CarrierHelper_id').text().trim();
        var truckId = $(this).closest('tr').find('.recipient_id').text().trim();
        var CarrierId = $(this).closest('tr').find('.Carrier_id').text().trim();
        var ZoneId = $(this).closest('tr').find('.Zone_id').text().trim();


        $("#DriverId").val(recipient_id);
        $("#CarrierID").val(CarrierId);
        $("#ZoneID").val(ZoneId);

        //var country_id = $(this).closest('tr').find('.CarrierHelper_id').text().trim();
        var TruckName = $(this).closest('tr').find('.TruckName').text().trim();

        
        //var CarrierID = $(this).closest('tr').find('.recipient_id').text().trim();

        var activestatus = $(this).closest('tr').find('.IsActive').text().trim();
        var IsActive;

        if (activestatus == 'False') {

            $("#Actives").attr('checked', false);
        }
        if (activestatus == 'True') {
            $("#Actives").attr('checked', true);
        }


        $("#TruckId", myModal).val(truckId);
        //$("#CarrierName_id", myModal).val(CountryName);
        
        $("#TruckName", myModal).val(TruckName);


        $("#Active", myModal).val(IsActive);

    });
</script>


<script type="text/javascript">
    function sendform(type) {
        var selectedText;
        var selectedValue;
        if (type == 'S') {
             selectedText = $("#CarrierIDs").find("option:selected").text();
             selectedValue = $("#CarrierIDs").val();
            if (selectedValue == "0")
            {
                alert("Select Carrier");
                return false;

            }

            selectedText = $("#ZonesID").find("option:selected").text();
            selectedValue = $("#ZonesID").val();
         
            if (selectedValue == "0") {
                alert("Select Zone");
                return false;

            }

            selectedText = $("#DriversID").find("option:selected").text();
            selectedValue = $("#DriversID").val();
            if (selectedValue == "0") {
                alert("Select Driver");
                return false;

            }




            //alert((document.getElementById('Name').value == ""));
            if (document.getElementById('Name').value == "") {
                return false;

            }

        }
        else if (type == 'E')
        {
            
             selectedText = $("#CarrierID").find("option:selected").text();
             selectedValue = $("#CarrierID").val();
            //alert("Selected Text: " + selectedText + " Value: " + selectedValue);
            if (selectedValue == "0") {
                alert("Select Carrier");
                return false;

            }


            selectedText = $("#ZoneID").find("option:selected").text();
            selectedValue = $("#ZoneID").val();
            //alert("Selected Text: " + selectedText + " Value: " + selectedValue);
            if (selectedValue == "0") {
                alert("Select Zone");
                return false;

            }



            selectedText = $("#DriverId").find("option:selected").text();
            selectedValue = $("#DriverId").val();
            //alert("Selected Text: " + selectedText + " Value: " + selectedValue);
            if (selectedValue == "0") {
                alert("Select Driver");
                return false;

            }

        }
        
        
    }

</script>

